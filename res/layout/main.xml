<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:textColor="#FFFFFF">
			
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="10px">
				
		<Button android:id="@+id/ingredients"
			android:layout_width="150px"
			android:layout_height="150px"
			android:background="@drawable/ing"/>
			
		<Button android:id="@+id/canMake" 
			android:text="@string/canMake"
			android:layout_width="150px"
			android:layout_height="150px"
			android:layout_toRightOf="@id/ingredients"/>
			
		<Button android:id="@+id/browse" 
			android:text="@string/browse"
			android:layout_width="150px"
			android:layout_height="150px"
			android:layout_below="@id/ingredients"/>
			
		<Button android:id="@+id/random"
			android:layout_width="150px"
			android:layout_height="150px"
			android:layout_below="@id/canMake"
			android:layout_toRightOf="@id/browse"
			android:background="@drawable/ran"/>

	</RelativeLayout>
				
				
		<ImageView   
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:src="@drawable/mybar"
		  android:layout_alignParentBottom="true"/>
	            
	</LinearLayout>